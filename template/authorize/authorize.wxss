.authorize_mask{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99998;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5)
}
.bg{
  width: 80%;
  /* height: 60%; */
  background: #fff;
  border-radius: 20rpx;
  position: fixed;
  z-index: 99999;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  padding: 50rpx 0;
}
.title{
  margin-bottom: 20rpx;
}
.authorize_bg{
  width: 316rpx;
  height: 226rpx;
  margin: 60rpx 0;
}
.authorize_btn button{
  display: inline-block;
  font-size: 36rpx;
  margin: 0 20rpx;
  border-radius: 50rpx;
  width: 40%;
  line-height: 2;
}
.submit {
  border: 1px solid #0099ff;
  background: #0099ff !important; 
}

.cancel_btn {
  border: 1px solid #c6c6c6;
  background: #fff !important;
}