/* pages/shelf/package/index.wxss */
@import '/template/authorize/authorize.wxss';
page {
  background: #f5f5f5;
}

.WxEmojiView {
  /* background: red; */
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.header {
  position: relative;
}

.header image {
  display: block;
  width: 750rpx;
}

.header .headerInfo {
  line-height: 100rpx;
  position: absolute;
  bottom: 48rpx;
  left: 48rpx;
}

.header .headerInfo image {
  border-radius: 50%;
  margin-right: 20rpx;
}

.brandIntroduce {
  background: #fff;
  padding-top: 2%;
}

.defaultHead {
  background: #fff;
}

.defaultHead .title {
  border-bottom: 1px solid #f5f5f5;
  margin-left: 6%;
  padding: 3% 2% 3% 0;
  font-weight: 500;
}

.brandIntroduce .content {
  padding: 4% 6%;
  color: #888;
}

.union {
  background: #fff;
  margin-top: 2%;
}

.union .content {
  padding: 4% 6%;
}

.union .content .left {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}

.union .content image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.contact {
  margin-top: 2vw;
}

.contact .content {
  margin-left: 6%;
  padding: 3% 6% 3% 0;
  border-bottom: 1px solid#f5f5f5;
}

.contact button {
  background: #fff;
  padding: 0;
  color: #625e5d;
  line-height: 1;
}

.contact button::after, .contact button::before {
  display: none;
  border: 0;
}

/* 货架套餐列表详情 */

.packageList {
  padding: 2% 4% 2% 6%;
}

.packageList .left {
  width: 21vw;
  height: 21vw;
  margin-right: 10rpx;
}

.packageList .left image {
  width: 100%;
  height: 100%;
}

.packageList .center {
  justify-content: flex-start;
  width: 50vw;
}

.packageList .center>view {
  margin-bottom: 10rpx;
}

.packageList .right .butBtn {
  color: #fff;
  padding: 6rpx 10rpx;
  border-radius: 6rpx;
}
