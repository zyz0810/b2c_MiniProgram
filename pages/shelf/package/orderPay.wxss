/* pages/shelf/package/orderPay.wxss */
@import '/template/authorize/authorize.wxss';
.word .left {
  line-height: 1.4rem;
  margin-right: 2vw;
}

.radio-group {
  padding: 3% 3%;
  background: #fff;
  margin-bottom: 2vw;
}

.radio-group label {
  margin: 0 20rpx;
}

radio .wx-radio-input {
  width: 38rpx;
  height: 38rpx;
}

.packageList .left {
  width: 25vw;
  height: 25vw;
  margin-right: 10rpx;
}

.packageList .left image {
  width: 100%;
  height: 100%;
}

.packageList .center {
  justify-content: flex-start;
  width: 50vw;
}

.packageList .center>view {
  margin-bottom: 10rpx;
}

.bottom {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 0;
  z-index: 888;
}

.bottom .right {
  color: #fff;
  padding: 0 3%;
}

.bottom button {
  border: 0;
}

.receiver {
  margin-top: 2vw;
}

.line {
  display: flex;
  font-size: 30rpx;
  background: #fff;
  margin-bottom: 1px;
  padding: 4% 2%;
}

.line .head {
  width: 20%;
  height: 1.4rem;
  line-height: 1.4rem;
}

.actionNumber {
  padding: 2% 20rpx;
}

.actionNumber .amount {
  display: flex;
  /* width: 210rpx; */
  position: relative;
}

.actionNumber .amount::after {
  content: " ";
  width: 200%;
  height: 200%;
  position: absolute;
  top: 0;
  left: 0;
  border: 1px solid rgba(0, 0, 0, 0.2);
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  box-sizing: border-box;
  border-radius: 10px;
}

.actionNumber .amount input {
  display: block;
  position: relative;
}

.actionNumber .amount input::after {
  content: " ";
  width: 200%;
  height: 200%;
  overflow-x: scroll;
  position: absolute;
  top: 0;
  left: 0;
  border-left: 1px solid rgba(0, 0, 0, 0.2);
  border-right: 1px solid rgba(0, 0, 0, 0.2);
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  box-sizing: border-box;
}

.actionNumber .amount button, .amount input {
  width: 70rpx;
  height: 70rpx !important;
  min-height: 70rpx !important;
  padding: 0;
  margin: 0;
  line-height: 70rpx !important;
  background: #fff;
  text-align: center;
  background: transparent;
  z-index: 999;
}

.actionNumber .amount button::after {
  border: none !important;
}

.showModal {
  position: fixed;
  top: 50%;
  left: 50%;
  width: 550rpx;
  transform: translate(-50%, -50%);
  padding: 4%;
  background: #fff;
  border-radius: 10rpx;
  color: #999;
  z-index: 1001;
}
