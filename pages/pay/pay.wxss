/*actionsheet  */
@import "/template/actionsheet/actionsheet";
@import "/template/password/payPassword";
@import '/template/authorize/authorize.wxss';

/* pages/pay/pay.wxss */

.address, .toStore, .tenant {
  margin-top: 1.33vw;
}

.address_icon {
  margin-top: 1em;
}

.tenant .center {
  padding-left: 25px;
  position: relative;
}

.tenant .center text {
  position: absolute;
  left: 0;
  top: 0;
}

.product {
  background: #f9f9f9;
  -webkit-justify-content: space-between;
  -moz-justify-content: space-between;
  justify-content: space-between;
}

.product .product_txt {
  padding: 5px 0 5px 2vw;
  -webkit-justify-content: space-between;
  -moz-justify-content: space-between;
  justify-content: space-between;
}

.product_img {
  width: 20vw;
  height: 20vw;
  border-radius: 10px;
}

.product_img image {
  width: 100%;
  height: 100%;
  border-radius: 10px;
}

.product .price {
  padding: 0;
  background: #f9f9f9;
}

.word .left {
  line-height: 1.4rem;
}

.reduct {
  margin-top: 1.33vw;
  margin-bottom: 55px;
}

.bottom {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 0;
  z-index: 888;
}

.bottom .right {
  color: #fff;
  padding: 0 3%;
}

.couponSelect {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 1001;
}

.couponSelect .border_bottom::after {
  bottom: 0;
}

.couponSelect .couponmask {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1002;
}

.couponSelect .couponContent {
  width: 100%;
  position: absolute;
  bottom: 0;
  z-index: 1003;
}

.couponContent .couponSelectTitle {
  background: #efeff4;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
}

.couponContent .couponSelectTitle image {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 25rpx;
  right: 25rpx;
}

.couponContent .couponList {
  max-height: 50vh;
  background: #fff;
  box-sizing: border-box;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
}

.couponContent .couponList>view {
  padding: 4%;
}

.couponContent .couponOp>view {
  text-align: center;
  flex: 1;
  color: white;
  padding: 20rpx;
}

.payStyleTitle {
  padding: 2%;
}

.radio-group {
  padding: 3% 0;
  background: #fff;
}

.radio-group label {
  margin: 0 20rpx;
}

radio .wx-radio-input {
  width: 38rpx;
  height: 38rpx;
}

.order_product {
  padding-bottom: 100rpx;
}

.address, .radio-group, .payStyleTitle, .order_product>view {
  position: relative;
  z-index: 99;
}

.invoiceBtn {
  /* border-top: 20rpx solid #fff; *//* background: #f9f9f9; */
}

.invoiceBtn .right {
  /* padding: 8rpx 20rpx; *//* border: 1px solid #000; */
  border-radius: 15rpx;
}

/*swtich样式-start*/

/*swtich整体大小*/

.wx-switch-input {
  width: 82rpx !important;
  height: 40rpx !important;
  margin: 0 !important;
  padding: 0 !important;
}

/*白色样式（false的样式）*/

.wx-switch-input::before {
  width: 80rpx !important;
  height: 36rpx !important;
}

/*绿色样式（true的样式）*/

.wx-switch-input::after {
  width: 38rpx !important;
  height: 36rpx !important;
}

/*swtich样式end*/

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
}

.invoiceView {
  width: 96%;
  /* height: 60%; */
  min-height: 400rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 9999;
  background: #fff;
  padding: 0 2%;
  border-top: 20rpx solid #f9f9f9;
}

.invoiceView .lineItem {
  padding: 2% 0;
  border-bottom: 1px solid #f9f9f9;
  align-items: center;
}

.invoiceView .lineItem .left {
  width: 80px;
  /* justify-content:flex-end; */
}

.submit {
  width: 80%;
  margin: 50rpx auto;
  /* position: absolute;
  left: 10%;
  bottom: 200rpx; */
}

.lineItem .center.type {
  flex-direction: row;
  justify-content: flex-start;
}

.type>text {
  padding: 4rpx 20rpx;
  margin: 0 20rpx 0 0;
  border-radius: 20rpx;
}

