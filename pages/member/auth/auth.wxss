/* pages/purse/auth/index.wxss */

page {
  background: #fff;
}

.topTips {
  background: #cdb59b;
  padding: 1% 54rpx;
}

.topTips .right::after {
  border-color: #fff;
}

.inputPart {
  background: #fff;
  border-top: 2vw solid #f4f4f4;
}

.line {
  display: flex;
  padding: 0 2% 0 2%;
  height: 50px;
  line-height: 50px;
  font-size: 16px;
  color: #000;
  background: #fff;
  margin-bottom: 1px;
  margin: 0 4%;
  border-bottom: 2px solid #f1f1f1;
}

.classname {
  width: 70%;
}

.line input {
  width: 100%;
  height: 30px;
  margin-top: 10px;
  font-size: 14px;
}

.line .head {
  width: 25%;
}

.classname text {
  overflow: hidden;
}

.authInfo {
  border-top: 2vw solid #f4f4f4;
  background: #fff;
  padding: 2% 54rpx;
}

.uploadImg {
  background: #fff;
}

.uploadImg .flex-item {
  text-align: center;
}

.uploadImg .flex-item image {
  width: 290rpx;
  height: 198rpx;
}

.submit {
  width: 88%;
  margin-top: 50rpx;
  line-height: 2.5;
  background: #d8d8d8;
  color: #fff !important;
  border-radius: 80rpx;
}
